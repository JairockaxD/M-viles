<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarLibroActivity">

    <EditText
            android:id="@+id/txtNombreLibro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Ingrese el nombre..."
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/txtICBN"
            app:layout_constraintStart_toStartOf="@+id/txtICBN"
            app:layout_constraintTop_toBottomOf="@+id/txtICBN" />

    <EditText
            android:id="@+id/txtfechaPublicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Fecha de Publicación"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="@+id/txtNumPaginas"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtNumPaginas"
            app:layout_constraintTop_toBottomOf="@+id/txtNumPaginas" />

    <EditText
            android:id="@+id/txtEditorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Editorial"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/txtfechaPublicacion"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtfechaPublicacion"
            app:layout_constraintTop_toBottomOf="@+id/txtfechaPublicacion" />

    <EditText
            android:id="@+id/txtnumEdicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Edición"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/txtEditorial"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtEditorial"
            app:layout_constraintTop_toBottomOf="@+id/txtEditorial" />

    <EditText
            android:id="@+id/txtNumPaginas"
            android:layout_width="251dp"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Ingrese el número de páginas"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreLibro"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtNombreLibro"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreLibro" />

    <EditText
            android:id="@+id/txtICBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="ISBN"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGuardar"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/txtnumEdicion" app:layout_constraintStart_toStartOf="@+id/txtnumEdicion"
            app:layout_constraintEnd_toEndOf="@+id/txtnumEdicion"/>
</android.support.constraint.ConstraintLayout>