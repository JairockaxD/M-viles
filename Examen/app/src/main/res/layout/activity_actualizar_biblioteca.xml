<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarBibliotecaActivity">

    <EditText
            android:id="@+id/txtPublico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Publico: Si/No"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/anioFundacion"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/anioFundacion"
            app:layout_constraintTop_toBottomOf="@+id/anioFundacion" />

    <EditText
            android:id="@+id/txtCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Ingrese la ciudad..."
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/txtPais"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtPais"
            app:layout_constraintTop_toBottomOf="@+id/txtPais" />

    <EditText
            android:id="@+id/txtPais"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Ingrese el país..."
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreB"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtNombreB"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreB" />

    <EditText
            android:id="@+id/txtNombreB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="Ingrese el nombre..."
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btnEliminar"
            android:layout_width="131dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="452dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Eliminar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btnActualizar"
            android:layout_width="131dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="452dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Actualizar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintStart_toEndOf="@+id/btnEliminar"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btnCrearLibro"
            android:layout_width="131dp"
            android:layout_height="45dp"
            android:layout_marginTop="48dp"
            android:text="Crear Libro"
            app:layout_constraintEnd_toEndOf="@+id/btnEliminar"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/btnEliminar"
            app:layout_constraintTop_toBottomOf="@+id/btnEliminar" />

    <Button
            android:id="@+id/btnGestionarLIbros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="Gestionar Libros"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.68"
            app:layout_constraintStart_toEndOf="@+id/btnCrearLibro"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizar" />

    <EditText
            android:id="@+id/anioFundacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Año de Fundación"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/txtCiudad"
            app:layout_constraintStart_toStartOf="@+id/txtCiudad"
            app:layout_constraintTop_toBottomOf="@+id/txtCiudad" />

    <Button
            android:id="@+id/btnMenuRetorno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="616dp"
            android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            android:text="Menú"
            app:layout_constraintEnd_toEndOf="@+id/btnGestionarLIbros"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/btnCrearLibro"
            app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>