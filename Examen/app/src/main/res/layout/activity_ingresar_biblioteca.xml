<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarBibliotecaActivity">

    <EditText
            android:id="@+id/txtPais"
            android:layout_width="309dp"
            android:layout_height="38dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Ingrese el país..."
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreB"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/txtNombreB"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreB" />
    <Button
            android:text="Aceptar"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAceptar"
            android:layout_marginTop="156dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPublico" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.287"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="156dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPublico"
            app:layout_constraintStart_toEndOf="@+id/btnAceptar" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.145"/>

    <EditText
            android:id="@+id/txtNombreB"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="Ingrese el nombre..."
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/anioFundacion"
            android:layout_width="154dp"
            android:layout_height="38dp"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Año de Fundacion"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="@+id/txtCiudad"
            app:layout_constraintTop_toBottomOf="@+id/txtCiudad" />

    <EditText
            android:id="@+id/txtPublico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Publico: Si/No"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/anioFundacion"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/anioFundacion"
            app:layout_constraintTop_toBottomOf="@+id/anioFundacion" />

    <EditText
            android:id="@+id/txtCiudad"
            android:layout_width="307dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Ingrese la ciudad..."
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/txtPais"
            app:layout_constraintStart_toStartOf="@+id/txtPais"
            app:layout_constraintTop_toBottomOf="@+id/txtPais" />
</android.support.constraint.ConstraintLayout>